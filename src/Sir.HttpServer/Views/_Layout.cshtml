<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <style>
        textarea {
            float: left;
        }
        a {
            text-decoration: none;
            color: orangered;
        }
        a.result-link{
            color: mediumblue;
        }
        a.result-link:visited {
            color: purple;
        }
        input[type=text]{
            width: 260px;
        }
        hr{
            width: 300px;
        }
    </style>
    <a href="/"><h1>Did you go go?</h1></a>
    @using (Html.BeginRouteForm("default", new { controller = "Search" }, FormMethod.Get))
    {
        <div>
            <input type="text" id="q" name="q" placeholder="Ask anything." />
            <input type="submit" value="Go" />
        </div>
    }
    <div>
        @RenderBody()
    </div>
    <div><p>This is a web index. <a href="/add">Submit page.</a></p></div>
    <footer>
        <hr align="left" size="1" noshade/>
        <p>No cookies, no javascript, no tracking.</p>
        <p>Built on code <a href="https://github.com/kreeben/resin">hosted on GitHub</a></p>
    </footer>
</body>
</html>