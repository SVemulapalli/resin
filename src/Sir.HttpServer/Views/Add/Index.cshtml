@{
    ViewData["Title"] = "Add your page to the 'Did you go go?' index.";
    Layout = "~/Views/_Layout.cshtml";
}

@using (Html.BeginRouteForm("default", new { controller = "IO", action="AddPage", collectionId = "mycol", returnUrl = "/add/thankyou" }, FormMethod.Get))
{
    <div>
        <p>
            <label>https://</label> <input type="text" id="url" name="url" placeholder="yoursite.com/page.html" />
            <input type="submit" value="Go" />
        </p>
    </div>
}