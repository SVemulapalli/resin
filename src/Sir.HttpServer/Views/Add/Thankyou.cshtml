@{
    ViewData["Title"] = "Thank you for adding your page to the 'gogo' index.";
    Layout = "~/Views/_Layout.cshtml";
}

@using (Html.BeginRouteForm("default", new { controller = "Search" }, FormMethod.Get))
{
    <div>
        <input type="text" id="q" name="q" placeholder="Ask anything." />
        <input type="submit" value="Go" />
    </div>
}

<div>
    <h2>Thank you for contributing to the "go go" index.</h2>
    <p>
        Your page will soon be processed.
    </p>
    <p><a href="/add">Submit another page</a></p>
</div>