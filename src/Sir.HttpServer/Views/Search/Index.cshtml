@model IEnumerable<Sir.HttpServer.Controllers.SearchResultModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_Layout.cshtml";

    IList<Sir.HttpServer.Controllers.SearchResultModel> docs = Model == null ?
        new Sir.HttpServer.Controllers.SearchResultModel[0].ToList() : Model.ToList();
}

@if (ViewData["time_ms"] != null)
{
    <h2>@docs.Count results for '@ViewData["query"]' in @ViewData["collectionName"] took @ViewData["time_ms"] ms</h2>
}
    <div>
                @foreach (var item in docs)
                {
                        <div>
                            <p><span>|@item.Document["_score"]|</span> <a class="result-link" href="@item.Document["url"].ToString()">@item.Document["title"].ToString()</a> <span>@item.Document["site"]</span></p>
                        </div>
                }
    </div>